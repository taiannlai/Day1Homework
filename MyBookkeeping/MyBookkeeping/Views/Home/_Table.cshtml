@using MyBookkeeping.Models
@model MyBookkeeping.Models.ViewModels.BookkeePingViewModels
@{ 
    var item_list = Model.Item;
}
<div class="col-md-12">
    <table class="table table-bordered table-hover">
        <tr>
            <th>#</th>
            <th>類別</th>
            <th>日期</th>
            <th>金額</th>
        </tr>
        @{
            var i = 1;
        }
        @foreach (var item in item_list)
        {
            <tr>
                <td>@(i++)</td>
                <td>@item.Type</td>
                <td>@item.DateTimes.ToShortDateString()</td>
                <td>@item.Payment</td>
            </tr>


        }
    </table>
</div>